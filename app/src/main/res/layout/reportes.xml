<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
        <TextView
            style="@style/Header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvReporte"
            android:text="Reporte"
            android:textSize="30dp"
            android:gravity="center"/>

        <TextView
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo"
        android:textSize="15dp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:id="@+id/textView" />

        <View style="@style/Separator" />

    <EditText
        android:ems="10"
        android:maxLength="50"
        android:maxLines="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPersona"
            android:hint="Â¿Quien reporta?"
            android:gravity="center"
            />
    <EditText
        android:maxLength="50"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etReferencia"
        android:layout_below="@+id/etEntre"
        android:gravity="center"
        android:hint="Referencia"
        android:layout_centerHorizontal="true" />

    <EditText
        android:maxLength="200"
        android:maxLines="3"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="Descripcion"
        android:gravity="center"
        android:id="@+id/etDescripcion"
        android:layout_below="@+id/etReferencia" />

    <EditText
        android:maxLength="10"
        android:maxLines="1"
        android:id="@+id/etFecha"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:hint="Fecha"
        android:inputType="date"/>

            <View style="@style/Separator" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvFoto"
                android:text="Foto"
                android:gravity="center"
                style="@style/Header"
                android:textSize="30dp"/>

            <EditText
                android:maxLength="50"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etNombre"
                android:layout_below="@+id/textView"
                android:gravity="center"
                android:hint="Nombre(imagen)"
                android:inputType="textPersonName"
                android:layout_centerHorizontal="true" />


            <Button
                android:id="@+id/btnCargar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Cargar Imagen"/>

            <View style="@style/Separator" android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSpin"
                android:text="Tipo de Reporte"
                android:gravity="center"
                style="@style/Header"
                android:textSize="30dp"/>
        <Spinner
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/spn"
            android:prompt="@string/selecciona"
            android:entries="@array/spn_array"
            android:gravity="center"
            style="@style/AppTheme"
            android:layout_gravity="center"
            android:background="@color/ripple_material_dark">
            </Spinner>
            <View style="@style/Separator" android:layout_marginTop="5dp"/>
    <Button
       android:id="@+id/btnEnviar"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:text="Enviar"
        android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>